{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "repository",

  "type": "object",
  "required": ["action", "repository", "sender"],
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "created",
        "deleted",
        "archived",
        "unarchived",
        "edited",
        "renamed",
        "transferred",
        "publicized",
        "privatized"
      ]
    },
    "changes": {
      "type": "object",
      "properties": {
        "description": {
          "type": "object",
          "properties": {
            "from": {
              "type": "string"
            }
          }
        },
        "default_branch": {
          "type": "object",
          "properties": {
            "from": {
              "type": "string"
            }
          }
        },
        "owner": {
          "type": "object",
          "properties": {
            "from": {
              "type": "object",
              "properties": {
                "user": {
                  "$ref": "common/user.schema.json"
                }
              }
            }
          }
        },
        "additionalProperties": false
      },
      "additionalProperties": false
    },
    "repository": {
      "$ref": "common/repository.schema.json"
    },
    "sender": {
      "$ref": "common/user.schema.json"
    },
    "installation": {
      "oneOf": [
        { "$ref": "common/installation.schema.json" },
        { "type": "null" }
      ]
    },
    "organization": {
      "oneOf": [
        { "$ref": "common/organization.schema.json" },
        { "type": "null" }
      ]
    }
  },
  "additionalProperties": false
}
