{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "content_reference",

  "type": "object",
  "required": ["action", "content_reference", "repository", "sender", "installation"],
  "properties": {
    "action": {
      "type": "string",
      "enum": ["created"]
    },
    "content_reference": {
      "type": "object",
      "required": ["id", "node_id", "reference"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "node_id": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "repository": { "$ref": "$repository" },
    "sender": { "$ref": "$sender" },
    "installation": { "$ref": "$installation" },
    "organization": { "$ref": "$organization" }
  },
  "additionalProperties": true
}
