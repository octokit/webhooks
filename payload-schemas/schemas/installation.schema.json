{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "installation",

  "type": "object",
  "required": ["action", "installation", "repositories", "sender"],
  "properties": {
    "action": {
      "type": "string",
      "enum": ["created", "deleted", "suspend", "unsuspend", "new_permissions_accepted"]
    },
    "installation": { "$ref": "$installation" },
    "repositories": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "anyOf": [
          {
            "type": "object",
            "required": ["id", "node_id", "name", "full_name", "private"],
            "properties": {
              "id": {
                "type": "integer"
              },
              "node_id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "full_name": {
                "type": "string"
              },
              "private": {
                "type": "boolean"
              }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "sender": { "$ref": "$sender" },
    "organization": { "$ref": "$organization" }
  },
  "additionalProperties": true
}
