{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common/check-run-pull-request.schema.json",
  "type": "object",
  "required": ["url", "id", "number", "head", "base"],
  "properties": {
    "url": { "type": "string", "format": "uri" },
    "id": { "type": "integer" },
    "number": { "type": "integer" },
    "head": {
      "type": "object",
      "required": ["ref", "sha", "repo"],
      "properties": {
        "ref": { "type": "string" },
        "sha": { "type": "string" },
        "repo": { "$ref": "repo-ref.schema.json" }
      },
      "additionalProperties": false
    },
    "base": {
      "type": "object",
      "required": ["ref", "sha", "repo"],
      "properties": {
        "ref": { "type": "string" },
        "sha": { "type": "string" },
        "repo": { "$ref": "repo-ref.schema.json" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "title": "Check Run Pull Request"
}
