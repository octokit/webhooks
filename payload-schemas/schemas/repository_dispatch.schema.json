{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "repository_dispatch",

  "type": "object",
  "required": [
    "action",
    "branch",
    "client_payload",
    "repository",
    "organization",
    "sender",
    "installation"
  ],
  "properties": {
    "action": {
      "type": "string"
    },
    "branch": {
      "type": "string"
    },
    "client_payload": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "repository": {
      "$ref": "common/repository.schema.json"
    },
    "sender": {
      "$ref": "common/user.schema.json"
    },
    "installation": {
      "oneOf": [
        { "$ref": "common/installation.schema.json" },
        { "type": "null" }
      ]
    },
    "organization": {
      "oneOf": [
        { "$ref": "common/organization.schema.json" },
        { "type": "null" }
      ]
    }
  },
  "additionalProperties": false
}
