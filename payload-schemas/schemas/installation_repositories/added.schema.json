{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "installation_repositories$added",
  "type": "object",
  "required": [
    "action",
    "installation",
    "repository_selection",
    "repositories_added",
    "repositories_removed",
    "sender"
  ],
  "properties": {
    "action": { "type": "string", "enum": ["added"] },
    "installation": {
      "type": "object",
      "required": [
        "id",
        "account",
        "repository_selection",
        "access_tokens_url",
        "repositories_url",
        "html_url",
        "app_id",
        "target_id",
        "target_type",
        "permissions",
        "events",
        "created_at",
        "updated_at",
        "single_file_name"
      ],
      "properties": {
        "id": { "type": "integer" },
        "account": { "$ref": "common/user.schema.json" },
        "repository_selection": {
          "type": "string",
          "enum": ["all", "selected"]
        },
        "access_tokens_url": { "type": "string" },
        "repositories_url": { "type": "string" },
        "html_url": { "type": "string" },
        "app_id": { "type": "integer" },
        "target_id": { "type": "integer" },
        "target_type": { "type": "string" },
        "permissions": {
          "type": "object",
          "required": [],
          "properties": {
            "administration": { "type": "string", "enum": ["read", "write"] },
            "statuses": { "type": "string", "enum": ["read", "write"] },
            "repository_projects": {
              "type": "string",
              "enum": ["read", "write"]
            },
            "repository_hooks": { "type": "string", "enum": ["read", "write"] },
            "pull_requests": { "type": "string", "enum": ["read", "write"] },
            "pages": { "type": "string", "enum": ["read", "write"] },
            "issues": { "type": "string", "enum": ["read", "write"] },
            "deployments": { "type": "string", "enum": ["read", "write"] },
            "contents": { "type": "string", "enum": ["read", "write"] },
            "checks": { "type": "string", "enum": ["read", "write"] },
            "metadata": { "type": "string", "enum": ["read", "write"] },
            "vulnerability_alerts": {
              "type": "string",
              "enum": ["read", "write"]
            }
          },
          "additionalProperties": false
        },
        "events": { "type": "array", "items": { "type": "string" } },
        "created_at": { "type": "integer" },
        "updated_at": { "type": "integer" },
        "single_file_name": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "repository_selection": { "type": "string", "enum": ["all", "selected"] },
    "repositories_added": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "node_id", "name", "full_name", "private"],
        "properties": {
          "id": { "type": "integer" },
          "node_id": { "type": "string" },
          "name": { "type": "string" },
          "full_name": { "type": "string" },
          "private": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    },
    "repositories_removed": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "node_id", "name", "full_name", "private"],
        "properties": {
          "id": { "type": "integer" },
          "node_id": { "type": "string" },
          "name": { "type": "string" },
          "full_name": { "type": "string" },
          "private": { "type": "boolean" }
        },
        "additionalProperties": false
      },
      "maxItems": 0
    },
    "sender": { "$ref": "common/user.schema.json" }
  },
  "additionalProperties": false,
  "title": "installation_repositories added event"
}
