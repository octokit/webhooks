{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "project",

  "type": "object",
  "required": ["action", "project", "repository", "sender"],
  "properties": {
    "action": {
      "type": "string",
      "enum": ["created", "edited", "closed", "reopened", "deleted"]
    },
    "project": {
      "type": "object",
      "required": [
        "owner_url",
        "url",
        "html_url",
        "columns_url",
        "id",
        "node_id",
        "name",
        "body",
        "number",
        "state",
        "creator",
        "created_at",
        "updated_at"
      ],
      "properties": {
        "owner_url": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "html_url": {
          "type": "string"
        },
        "columns_url": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        },
        "node_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "number": {
          "type": "integer"
        },
        "state": {
          "type": "string"
        },
        "creator": { "$ref": "common/user.schema.json" },
        "created_at": {
          "type": "string"
        },
        "updated_at": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "repository": {
      "$ref": "common/repository.schema.json"
    },
    "sender": {
      "$ref": "common/user.schema.json"
    },
    "installation": {
      "$ref": "common/installation.schema.json"
    },
    "organization": {
      "$ref": "common/organization.schema.json"
    }
  },
  "additionalProperties": false
}
