{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "common/package-nuget-metadata.schema.json",
  "type": "object",
  "required": [],
  "properties": {
    "id": { "oneOf": [{ "type": "string" }, { "type": "integer" }] },
    "name": { "type": "string" },
    "value": {
      "oneOf": [
        { "type": "boolean" },
        { "type": "string" },
        { "type": "integer" },
        {
          "type": "object",
          "properties": {
            "url": { "type": "string" },
            "branch": { "type": "string" },
            "commit": { "type": "string" },
            "type": { "type": "string" }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false,
  "title": "Package Nuget Metadata"
}
